@model IEnumerable<FitnessClub.Domain.DTO.Gruppa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Создать новую группу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Названиеgruppi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Примечание)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Названиеgruppi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Примечание)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Названиеgruppi">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Названиеgruppi">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Названиеgruppi">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
